<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar" type="text/css">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--侧滑菜单项-->
    <style name="menuTextStyle">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/font_20_size</item>
        <item name="android:paddingLeft">@dimen/layout_big_padding</item>
        <item name="android:paddingTop">@dimen/layout_middle_padding</item>
        <item name="android:paddingBottom">@dimen/layout_middle_padding</item>
        <item name="android:paddingRight">@dimen/layout_normal_padding</item>
        <item name="android:drawableLeft">@mipmap/heart</item>
        <item name="android:drawablePadding">@dimen/layout_normal_padding</item>
    </style>

</resources>
